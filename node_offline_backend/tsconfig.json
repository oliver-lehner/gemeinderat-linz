{
  "compilerOptions": {
    "outDir": "./dist",
    "resolveJsonModule": true,
    "lib": ["es2020.string"],
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "removeComments": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["./*.ts"],
  "exclude": ["node_modules", "**/*.d.ts", "dist"]
}
